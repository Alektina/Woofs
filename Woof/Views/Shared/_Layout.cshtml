<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Woof</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Woof.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Woof</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                     
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-action="Index" asp-controller="Dogs">Dogs</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-action="Medlem" asp-controller="Home">Medlem</a>
                        </li>

                        <!--
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-action="Index" asp-controller="Kennels">Kennels</a>
                        </li> -->

                        @if (Context.Session.GetString("Role") == "4")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-action="Index" asp-controller="Roles">Roles</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-action="Index" asp-controller="Users">Users</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-action="Index" asp-controller="Countries">Countries</a>
                            </li>
                        }


                        <!-- Tar oss till den inloggade användarens Details, kan behöva ändras senare -->
                        <li class="nav-item">
                            
                            @if (Context.Session.GetString("Username") != null)
                            {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@Context.Session.GetString("UserID")">
                                        @Context.Session.GetString("Username")
                                </a>
                            </li>
                            }
                            else
                            {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-action="Login" asp-controller="Users">Login</a>
                            </li>
                            }
                        </li>



                        

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-container">
            <div class="footer-col">
                <h4>Kundtjänst</h4>
                <ul>
                    <li><a asp-area="" asp-action="WIP" asp-controller="Home"> Använd vårt kontaktformulär </a></li>
                </ul>
            </div>

            <div class="footer-col">
                <h4>Information</h4>
                <ul>
                    <li><a asp-area="" asp-action="WIP" asp-controller="Home">Hundregistret FAQ </a></li>
                    <li><a asp-area="" asp-action="WIP" asp-controller="Home">Felrapportering </a></li>
                    <li><a asp-area="" asp-action="WIP" asp-controller="Home">Integritetspolicy </a></li>
                    <li><a asp-area="" asp-action="WIP" asp-controller="Home">Inloggning FAQ </a></li>

                </ul>
            </div>
            <div class="footer-col">
                <h4>Om oss</h4>
                <ul>
                    <li><a asp-area="" asp-action="WIP" asp-controller="Home"> Om oss </a></li>
                </ul>
            </div>
            <div class="footer-col">
                <h4>Följ oss</h4>
                <div class="social-icons">
                    <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                </div>
                <div class="payment-icons">
                    <i class="fab fa-cc-visa"></i>
                    <i class="fab fa-cc-mastercard"></i>
                    <i class="fab fa-paypal"></i>
                    <i class="fab fa-cc-amex"></i>
                </div>

            </div>
        </div>
        </div>
        <div class="copyright-text">
            &copy; 2023 ccpedigrees
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
