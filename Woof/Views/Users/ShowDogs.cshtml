@model IEnumerable<Woof.Models.Dog>

@{
    ViewData["Title"] = "Show Dogs";
    var userName = ViewData["UserName"] as string;
}

<h1>Show Dogs</h1>

<div>
    <h4>Owner Details</h4>
    <hr />
    <p>Owner: <a asp-action="Details" asp-controller="Users" asp-route-id="@ViewData["UserID"]">@ViewData["UserName"]</a></p>
</div>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DogID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentOwnerID)
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DogID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentOwnerID)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Dogs" asp-route-id="@item.DogID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
