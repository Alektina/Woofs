@model Woof.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        @if (!string.IsNullOrWhiteSpace(Model.Username))
        {
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Email))
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
        </dd>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Password))
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Password)
        </dd>
        }

        @if (Model.RegistrationDate != null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.RegistrationDate)
        </dd>
        }

        @if (Model.KennelID != null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.KennelID)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.KennelID)
        </dd>
        }

        @if (Model.RoleID != null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.RoleID)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.RoleID)
        </dd>
        }
        <div>
            <a asp-action="ShowDogs" asp-route-userId="@Model.UserID" class="btn btn-info">Show Dogs</a>
        </div>
    </dl>
</div>
<!-- Då roll 4 är Admin rollen för tillfället kan admins alltid redigera en user, detta är inte optimalt egentligen men får duga! -->
<div>
    @if (Context.Session.GetString("Role") == "4" || Model.UserID.ToString() == Context.Session.GetString("UserID"))
    {
        <a asp-action="Edit" asp-route-id="@Model.UserID">Edit</a>

        <form asp-controller="Users" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-link">Logout</button>
        </form>

    } 
</div>



